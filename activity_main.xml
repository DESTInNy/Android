<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.calcluatedemo.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:id="@+id/et_input"
        android:enabled="false"
        android:gravity="bottom|end"
        tools:background="?attr/colorButtonNormal"
        android:fontFamily="sans-serif"
        android:textSize="24sp" /><!--gravity，文字在控件中的对齐方式
        layout_gravity,控件在布局中对齐方式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:background="@android:color/darker_gray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="C"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:id="@+id/btn_clear"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"/>
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="DEL"
            android:textSize="20sp"
            android:id="@+id/btn_del"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="÷"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:id="@+id/btn_divide"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="×"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:id="@+id/btn_mul"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:id="@+id/btn_7"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="8"
            android:textSize="20sp"
            android:id="@+id/btn_8"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:gravity="bottom|right"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="9"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:id="@+id/btn_9"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="－"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:gravity="bottom|right"
            android:id="@+id/btn_reduce"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:id="@+id/btn_4"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:textSize="20sp"
            android:id="@+id/btn_5"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:gravity="bottom|right"
            android:id="@+id/btn_6"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="＋"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:gravity="bottom|right"
            android:id="@+id/btn_add"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/white_selector"/>-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:id="@+id/btn_1"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:background="@android:color/darker_gray" />
                    <!--android:background="@drawable/white_selector"/>-->
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:text="2"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:id="@+id/btn_2"
                    android:gravity="bottom|right"
                    android:background="@android:color/darker_gray" />
                    <!--android:background="@drawable/white_selector"/>-->
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:text="3"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:gravity="bottom|right"
                    android:id="@+id/btn_3"
                    android:background="@android:color/darker_gray" />
                    <!--android:background="@drawable/white_selector"/>-->


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:gravity="bottom|right"
                    android:id="@+id/btn_0"
                    android:background="@android:color/darker_gray" />
                    <!--android:background="@drawable/white_selector"/>-->
                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:text="."
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:id="@+id/btn_point"
                    android:gravity="bottom|right"
                    android:background="@android:color/darker_gray" />
                    <!--android:background="@drawable/white_selector"/>-->
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="＝"
            android:textSize="30sp"
            android:gravity="bottom|right"
            android:id="@+id/btn_equal"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray" />
            <!--android:background="@drawable/orange_selector"/>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="BIN"
            android:textSize="20sp"
            android:gravity="bottom|right"

            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/btn_two" />
        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="OCT"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:gravity="bottom|right"
            android:background="@android:color/darker_gray"
            android:id="@+id/btn_eight" />
        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/left"
            android:text="(" />
        <Button
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/right"
            android:text=")" />
    </LinearLayout>
</LinearLayout>
    <!--padding内边距-->
